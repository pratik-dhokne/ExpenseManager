<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:elevation="5dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="#E6BABA"
    app:cardCornerRadius="15sp"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"

                android:fontFamily="@font/poppins"
                android:text="12 April 2024"
                android:textColor="#0A0119"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/date_txt_expense"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:maxLines="1"

                android:fontFamily="@font/poppins"
                android:textColor="#25163E"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/type_txt_expense"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decscription"
                android:maxLines="1"
                android:textColor="#25163E"

                android:fontFamily="@font/poppins"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_below="@id/type_txt_expense"
                android:id="@+id/note_txt_expense"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="60000"
                android:textColor="#DF0A0A"

                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ammount_txt_expense"/>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>